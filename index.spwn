import "voxel.spwn"
extract obj_props


message = $.readfile("message.txt")
let sides = []
for letter in message.split("-") {
    let side = []
    for row in letter.trim().split("\n") {
        
        if row.length > 1 {
            side.push(row)
        }
    }
    sides.push(side)
}




s = 9
scaling = 2/3

move_group = 100g


ref = import "reference_grid.spwn"


extract ref.make_ref_grid(s, scaling)

import "full_cube.spwn"

let cubes = []

for i in ..10 {
    cube = @fullcube::new(
        s,
        scaling,
        i % 2 == 0,
        -1 if (i % 4 < 2) else 1,
        
        ref_grid, ref_grid_main, ref_grid_center,
        ref.make_follow_frame(s),
        [300 + 600 * i, 300],
        sides[i], sides[i + 1],
        move_group,
    )
    cubes.push(cube)
}


wait(3)

for i in ..cubes.length {
    cube = cubes[i]
    -> cube.animate(0.7)
    if i != cubes.length - 1 {
        wait(2)
        move_group.move(-200, 0)
        wait(0.1)
    }
}

